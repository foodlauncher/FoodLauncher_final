<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="30dp"
    android:background="@drawable/bottomsheet_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/res_name"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="20sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/res_cuisines"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            />
        <RelativeLayout
            android:id="@+id/rel_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/res_rating"
                android:fontFamily="@font/montserrat"
                android:textSize="15sp"
                android:paddingLeft="15dp"
                android:paddingVertical="5dp"
                android:textColor="@color/colorAccent"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_black_24dp"
                android:paddingRight="15dp"
                android:layout_toRightOf="@+id/res_rating"
                android:paddingVertical="5dp"
                android:layout_toEndOf="@+id/res_rating" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/res_address"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/res_phone"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/res_menu"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:autoLink="web"
            android:cursorVisible="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/res_timings"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/res_cost_for_two"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/res_table"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/call_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:paddingVertical="3dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Call"
            android:background="@drawable/btn_background"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/call_now"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:paddingVertical="3dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Invite"
            android:background="@drawable/btn_background"/>

    </RelativeLayout>

</LinearLayout>